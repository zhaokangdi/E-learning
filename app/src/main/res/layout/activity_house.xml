<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="12"
        android:orientation="horizontal">
    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/sursor"
        android:layout_width="match_parent"
        android:background="#CDCDCD"
        android:orientation="horizontal"
        android:layout_height="2dp">

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:background="#f7f7f7"
        android:orientation="horizontal"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/button1"
            android:layout_width="122dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:focusable="true">

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <ImageView
                android:id="@+id/buttonPic1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:focusable="true"
                android:src="@drawable/courses" />

            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全部课程"
                android:textStyle="bold"
                android:textSize="7sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button2"
            android:layout_width="122dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/buttonPic2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/my_study"
                android:focusable="true"/>

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的学习"
                android:textStyle="bold"
                android:textSize="7sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button3"
            android:layout_width="122dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/buttonPic3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/personal_setting"
                android:focusable="true"/>

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人设置"
                android:textStyle="bold"
                android:textSize="7sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>